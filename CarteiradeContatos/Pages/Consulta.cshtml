
@page
@model CarteiradeContatos.Consulta

@{
    ViewData["Title"] = "Contatos";
}

<h1>Contatos</h1>

<p>
    <a asp-page="Create">Criar Novo Contato</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contato[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contato[0].Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contato[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Contato)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="./Save" asp-all-route-data="@item.Id">Salvar</a> |
                    <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>